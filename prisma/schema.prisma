generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id       String     @id @default(cuid())
  imageSrc String     @map("image_src")
  name     String
  size     SIZE_TYPE
  color    COLOR_TYPE
  price    Int

  @@map("products")
}

enum SIZE_TYPE {
  SMALL
  MEDIUM
  LARGE
}

enum COLOR_TYPE {
  WHITE
  GREEN
  BLUE
  RED
  BLACK
}
